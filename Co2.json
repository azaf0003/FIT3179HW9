{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/azaf0003/FIT3179HW9/main/co2_2.csv"
  },
  "params": [
    {
      "name": "Year_Above",
      "value": 1970,
      "bind": {
        "input": "range",
        "min": 1970,
        "max": 2018,
        "step": 5,
        "name": "Minimum year"
      }
    },
    {
      "name": "Continent_selection",
      "value":"World",
      "bind": {
        "input": "select",
        "options": [
          "World",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "World",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Country == Continent_selection"
    },
    {"filter": "year(datum.Year) > Year_Above"}
  ],
  "layer":[{"mark": {"type": "line",  "point": true},
  "encoding": {
    "color":"darkred",
    "y": {
      "field": "AnnualCO2Emissions",
      "type": "quantitative",
      "title": "Annual Co2 emissions (Million)",
      "aggregate": "sum"
    },
    "x": {
      "field": "Year", 
      "type": "temporal",
      "axis": {"grid": false, "ticks": false}
      },
      
      "tooltip": [
      {"field": "AnnualCO2Emissions", "aggregate": "sum", "format": ".2f", "type": "quantitative", "title": "Total Emission"}, 
      {"field": "Year", "type": "temporal", "title": "Year", "timeUnit":"year"}
    ]
  }},
  {"mark": {
          "type": "text",
          "align": "right",
          "dx": 300,
          "dy": -180,
          "text": "Emissions growth seem to have slowed down over last few years but they have yet to reach their peak <---"
        }
}],
   "config": {
      "background":"",
  "view": {
     "stroke": "transparent"
  }
}
}
